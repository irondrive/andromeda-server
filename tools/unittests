#!/bin/bash

cd tools; if [ ! -f phpunit-9.phar ]; then
    wget https://phar.phpunit.de/phpunit-9.phar
fi; cd ..

runtests() {
    CMD="php tools/phpunit-9.phar $@"
    echo "$CMD"; $CMD || exit
}

runtests ./tests/phpunit $@

for i in $(ls apps); do
    DIR=apps/$i/tests/phpunit
    if [ -d $DIR ]; then runtests $DIR $@; fi
done
